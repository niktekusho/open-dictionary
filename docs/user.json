{
	"$schema": "http://json-schema.org/draft-04/schema",
	"type": "object",
	"properties": {
		"username": {
			"type": "string"
		},
		"fullname": {
			"type": "string"
		},
		"email": {
			"type": "string",
			"format": "email"
		},
		"nativeLanguage": {
			"type": "string"
		},
		"languages": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"passwordHash": {
			"type": "string"
		},
		"roles": {
			"type": "array",
			"items": {
				"type": "string",
				"enum": ["ADMIN", "WRITER", "REVIEWER", "READER"]
			}
		},
		"metadata": {
			"type": "object",
			"properties": {
				"creationDate": {
					"type": "string",
					"format": "date-time"
				},
				"lastAccess": {
					"type": "object",
					"format": "date-time"
				}
			}
		}
	},
	"required":[
		"username",
		"email",
		"passwordHash",
		"roles"
	]
}
