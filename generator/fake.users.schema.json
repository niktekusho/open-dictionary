{
	"id": "user",
	"type": "array",
	"minItems": 25,
	"maxItems": 25,
	"items": {
		"$schema": "http://json-schema.org/draft-07/schema",
		"type": "object",
		"properties": {
			"username": {
				"type": "string"
			},
			"fullname": {
				"type": ["string", "null"]
			},
			"email": {
				"type": "string",
				"format": "email"
			},
			"nativeLanguage": {
				"type": ["string", "null"]
			},
			"languages": {
				"type": ["array", "null"],
				"items": {
					"type": "string"
				}
			},
			"passwordHash": {
				"type": "string"
			},
			"roles": {
				"type": "array",
				"uniqueItems": true,
				"items": {
					"type": "string",
					"enum": ["ADMIN", "WRITER", "REVIEWER", "READER"]
				}
			},
			"metadata": {
				"type": "object",
				"properties": {
					"lastAccess": {
						"type": ["string", "null"],
						"format": "date-time"
					}
				}
			}
		},
		"required": [
			"username",
			"email",
			"passwordHash",
			"roles"
		]
	}
}
